@namespace DarkBinds.UI.IngameHUD
@attribute [StyleSheet("/UI/IngameHUD/IngameRoot.scss")]
@inherits Panel

@using DarkBinds.UI;


<root>
	<Inventory />
	<ItemBar />
	<MiniMap />
	<SaveMenu />

	<div class="Help">
		<label class="Help-title">
			Help
		</label>
		<div class="Help-text">
			<div class="keybind">
				<ControlGlyph glyph="PrimaryAttack"> - Break </ControlGlyph>
			</div>
			<div class="keybind">
				<ControlGlyph glyph="SecondaryAttack"> - Place </ControlGlyph>
			</div>
			<div class="keybind">
				<ControlGlyph glyph="Zoom"> - Switch Blocks </ControlGlyph>
			</div>
			<div class="keybind">
				<ControlGlyph glyph="Forward" glyphsize="Small" />
				<ControlGlyph glyph="left" glyphsize="Small" />
				<ControlGlyph glyph="back" glyphsize="Small" />
				<ControlGlyph glyph="right" glyphsize="Small"> - Move</ControlGlyph>
			</div>
			<div class="keybind">
				<ControlGlyph glyph="Run"> - Select Floor </ControlGlyph>
			</div>
		</div>
	</div>
</root>

@code
{
	public static IngameRoot Instance;

	public IngameRoot()
	{
		Instance = this;
	}
}
